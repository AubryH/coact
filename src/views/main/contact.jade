extends ../header.jade
block head
  title Coact - Contact
  meta(name="description" content="Contactez CoAct pour trouver un terrain de collaboration.")
block vars
  - var nav = 'contact'
block component
  .jumbotron.blue
    .container
      .row
        .col-md-8 &nbsp;
      .row
        .col-md-8
          h1 Contactez-nous !
  #contact.jumbotron
    .container
      .col-md-6
          h2
            .glyph.glyph-email
            span Directement
      .row
        .col-md-10.col-md-offset-1
          .container
            form(name="contactForm")
              .row
                .col-md-6
                  h3 Nom*&nbsp;
                  input(type="textbox")
                .col-md-6
                  h3 Prénom*&nbsp;
                  input(type="textbox")
              .row
                .col-md-12
                  h3 Organisation*
                  input(type="textbox")
              .row
                .col-md-12
                  h3 Fonction
                  input(type="textbox")
              .row
                .col-md-12
                  h3 Email*
                  input(type="textbox")
              .row
                .col-md-12
                  h3 Téléphone
                  input(type="textbox")
              .row
                .col-md-12
                  h3 Vous êtes intéressé par
                .col-md-6.col-md-offset-4
                  .interest
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest1")
                      label(for="interest1") les collaborative trainings
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest2")
                      label(for="interest2") les séminaires créatifs
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest3")
                      label(for="interest3") les forums ouverts
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest4")
                      label(for="interest4") l’organisation apprenante
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest5")
                      label(for="interest5") les technologies pour collaborer
                    .interest-box.checkbox.checkbox-primary
                      input(type="checkbox" id="interest6")
                      label(for="interest6") autres
              .row
                .col-md-12
                  h3 Précisez-nous votre demande
                  textarea(
                    cols=60
                    rows=5
                  )
              .row
                .col-md-12
                  .btn.btn-primary() Envoyer
      hr
      .row
        .col-md-6
          h2
            .glyph.glyph-phone
            span Par téléphone
        .col-md-6
          br
          .container
            .row
              .col-md-6
                p
                  span.name Frédéric LE PENNEC
                  a.social-icon(href="https://fr.linkedin.com/pub/frederic-le-pennec/3/998/428" target="_blank")
                    img(src="https://static.licdn.com/scds/common/u/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="LinkedIn" border="0")
                  a.social-icon(href="http://www.viadeo.com/profile/0021epk3zyefyakt/" target="_blank")
                    img(src="http://static1.viadeo-static.com/v_img20121114132157/profile/promotion/white/22x22.png" width="15" height="15" alt="")
              .col-md-6
                p 06 03 06 05 02
            .row
              .col-md-6
                p
                  span.name Aubry HERVÉ
                  a.social-icon(href="https://fr.linkedin.com/pub/aubry-herv%C3%A9/6b/275/18b" target="_blank")
                    img(src="https://static.licdn.com/scds/common/u/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="LinkedIn" border="0")
              .col-md-6
                p 06 58 50 68 14
      hr
      .row
        .col-md-6
          h2
            .glyph.glyph-mail
            span Par courrier
        .col-md-6
          br
          p(style='white-space:pre;')
